<Window x:Class="Reflector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reflector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" FontSize="20" Click="MenuItem_Click">
                <MenuItem Header="_Open" Click="OpenItem_Click" />
                <Separator />
                <MenuItem Header="_Exit"  Click="MenuItem_Click_1" />
            </MenuItem>
            <TextBox x:Name="text" TextWrapping="Wrap" Text="TextBox" Width="762" Height="396"/>
        </Menu>
    </Grid>
</Window>
